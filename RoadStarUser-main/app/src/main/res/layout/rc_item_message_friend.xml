<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="5dp"
    android:paddingBottom="5dp">

    <RelativeLayout
        android:id="@+id/reciver_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corner2"
        android:visibility="gone">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/imageView3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="5dp"
            android:src="@drawable/ic_user_name"
            android:visibility="gone" />

        <TextView
            android:id="@+id/textContentFriend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="20dp"
            android:layout_toEndOf="@id/imageView3"
            android:padding="3dp"
            android:text="Asdsd ssbdjh"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000" />

        <TextView
            android:id="@+id/textTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textContentFriend"
            android:layout_marginStart="5dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="20dp"
            android:layout_toEndOf="@id/imageView3"
            android:padding="2dp"
            android:text="11:00pm"
            android:textColor="#000"
            android:textSize="7sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/receiver_layout_pdf"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:visibility="gone">

        <ImageView
            android:id="@+id/reciver_pdf"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerInParent="true"
            android:gravity="start"
            android:paddingBottom="5dp"
            android:visibility="gone"></ImageView>

        <TextView
            android:id="@+id/pdf_textTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/reciver_pdf"
            android:layout_marginStart="10dp"
            android:layout_marginTop="0dp"
            android:padding="2dp"
            android:text="11:00pm"
            android:textColor="#000"
            android:textSize="7sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/receiver_rel"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="80dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_receiver_banner"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_margin="8dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/video_textTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_receiver_banner"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            android:padding="2dp"
            android:text="11:00pm"
            android:textColor="#000"
            android:textSize="7sp" />

        <ImageView
            android:id="@+id/id_receiver_play"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerInParent="true"
            android:background="@android:color/transparent"
            android:visibility="gone" />


        <ProgressBar
            android:id="@+id/receiver_progress"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerInParent="true"
            android:indeterminateTint="@color/colorPrimaryDark"
            android:visibility="visible" />
    </RelativeLayout>


</RelativeLayout>